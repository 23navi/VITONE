<% layout('layouts/boilerplate')%>

<h1>Available Stays</h1>
<div><br></div>
<!-- <div>
    <a href="/stays/new">Add stay</a>
</div> -->
<% for (let stay of stays){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            
            <img class="img-fluid" alt="" src="<% if(stay.images.length>0) { %><%=(stay.images[0].url)%><%}%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= stay.title %> </h5>
                <p class="card-text"><%= stay.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= stay.location%></small>
                </p>
                <a class="btn btn-primary" href="/stays/<%=stay._id%>">View <%=stay.title%></a>
            </div>
        </div>
    </div>
    <br>
</div>
<% }%>







<!-- Dynamic pagination -->
<div>
    <br>

    <nav aria-label="...">
        <ul class="pagination pagination-lg justify-content-center">
            <%let skipVal=0%>
            <% for(let i=0;i<Math.ceil(stayCount/limit);i++){ %>
                <li class="page-item <%=skip==skipVal?"disabled":""%> ">
                    <a class="page-link" href="/stays?skip=<%=skipVal%>"><%=i+1%></a>
                </li>
                <%skipVal+=limit%>
            <%} %>
        </ul>
    </nav>

</div>


